{
    "manifest_version": 2,

    "name": "Go to Flickr",
    "description": "Go to Flickr with image URL",
    "version": "1.0",
    "icons": {
        "32": "assets/img/icon_32.png",
        "48": "assets/img/icon_48.png"
    },
    "browser_action": {
        "default_icon": "assets/img/icon_32.png",
        "default_popup": "popup.html",
        "default_title": "Go to Flickr with image URL"
    },

    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "background": {
        "scripts": [
            "assets/js/flickr2user.js"
        ]
    }
}
